	<div id="bg"></div>		
			<div class='errorField' style="top:226px">{{errorMsg}}</div>

		<div id='mainMenu'>
			<h1>Legio I</h1>
			<hr>
			{{#if loggedIn}}
				<p>Welcome {{user.username}}!</p>
				<div class='menuButtons'>
					<form id='hostButton' action="/host" method="post"><input type='submit' value='host game'></form>
					<form id='joinButton' action="/join" method="post"><input type='submit' value='join game'></form>
					<form id='profileButton' action="/profile" method="post"><input type='submit' value='profile'></form>
					<form id='loginButton' action="/logout" method="post"><input type='submit' value='log out'></form>
				</div>
			{{else}}
				{{#if login}}
					{{> loginForm}}
				{{else}}
					{{> registerForm}}
				{{/if}}
			{{/if}}
		</div>
		
		<div id="information">
			{{> information}}
		</div>
		
		<script src="/socket.io/socket.io.js"></script>
		<script src="client/main/javascript/main.js"></script>
	</body>
</html>