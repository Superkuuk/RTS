<!DOCTYPE html>
<html>
	<head>
		<title>Legio I</title>
		
		<link href='https://fonts.googleapis.com/css?family=Quattrocento:400,700|Architects+Daughter' rel='stylesheet' type='text/css'>
		<link rel="stylesheet" href="client/style/global.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
		<link rel="stylesheet" href="client/main/style/main.css">
	</head>

	<body>
	<div id="bg"></div>		
		<div class='errorField'>{{errorMsg}}</div>
		<div id='mainMenu'>
			<h1>Legio I</h1>
			<hr>
			{{#if loggedIn}}
				<p>Welcome {{user.username}}!</p>
				<div class='menuButtons'>
					<form action="/lobby"><input type='submit' value='start game'></form>
					<form action="/profile"><input type='submit' value='profile'></form>
					<form action="/logout"><input type='submit' value='log out'></form>
				</div>
				<script>$('.errorField').hide()</script>
			{{else}}
				{{#if login}}
					{{> loginForm}}
				{{else}}
					{{> registerForm}}
				{{/if}}
			{{/if}}
		</div>
		
		<div id="information">
			{{> information}}
		</div>
		
		<script src="/socket.io/socket.io.js"></script>
		<script src="client/main/javascript/main.js"></script>
	</body>
</html>