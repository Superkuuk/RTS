		<div id='mainMenu'>
			<h1>Legio I</h1>
			<hr>
			{{#if loggedIn}}
				<p>Welcome {{user.username}}!</p>
				<div class='menuButtons'>
					<form action="/host" method="post"><input type='submit' value='host game'></form>
					<form action="/join" method="post"><input type='submit' value='join game'></form>
					<form action="/profile" method="post"><input type='submit' value='profile'></form>
					<form action="/logout" method="post"><input type='submit' value='log out'></form>
				</div>
			{{else}}
				<form action="/login" method="post">		
					<p>Login:</p>
					<input type='text' placeholder='name' name='username'>
					<input type='password' placeholder='password' name='password'>
					<input type='submit' value='login'>		
				</form>
				<input type='submit' value='new player' onclick="toggleNewPlayer()">
			{{/if}}
		</div>
		
		<div id="information">
			{{> information}}
		</div>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
	</body>
</html>