<!DOCTYPE html>
<html>
	<head>
		<title>Legio I</title>
		
		<link href='https://fonts.googleapis.com/css?family=Quattrocento:400,700|Architects+Daughter' rel='stylesheet' type='text/css'>
		<link rel="stylesheet" href="client/global/main.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
	</head>

	<body>
	<div id="bg"></div>
		{{#ifCond error '==' true}}	
			<div class='errorField'>{{errorMsg}}</div>
		{{/ifCond}}
		<div id='mainMenu'>
			<h1>Legio I</h1>
			<hr>
			{{#ifCond username '!=' false}}
				<p>Welcome {{username}}!</p>
				<div class='menuButtons'>
					<form action="/lobby"><input type='submit' value='start game'></form>
					<form action="/profile"><input type='submit' value='profile' disabled></form>
					<form action="/logout"><input type='submit' value='log out'></form>
				</div>
			{{else}}
				<form id='loginForm' action="/login" method="post">		
					<p>Login:</p>
					<input type='text' placeholder='name' name='username'>
					<input type='password' placeholder='password' name='password'>
					<input type='submit' value='login'>		
				</form>
				<form id='registerButton' action="/register" method="get"><input type='submit' value='new player'></form>
			{{/ifCond}}
		</div>
		
		<div id="information">
			{{> information}}
		</div>
	</body>
</html>